extends ../layout

block content
	h1.
		Blob ID #{blob._id}
	form(action='/blobs/#{blob._id}/edit',method='post',name='updateblob',enctype='application/x-www-form-urlencoded')
		p Naziv projekta: 
			input#inputNaziv(type="text", value='#{blob.naziv_projekta}', name="naziv")
		p Opis projekta:
			input#inputOpis(type="text", value='#{blob.opis_projekta}', name="opis")
		p Cijena projekta: 
			input#inputCijena(type="number", value='#{blob.cijena_projekta}',name="cijena")
		p Datum početka projekta: 
			input#inputPocetak(type="date", value='#{blob.datum_pocetka}',name="datum_pocetak")
		p Datum završetka projekta: 
			input#inputZavrsetak(type="date", value='#{blob.datum_zavrsetka}',name="datum_zavrsetak")
		p
			input(type='hidden',value='PUT',name='_method')
		p
			button#btnSubmit(type='submit').
				Update